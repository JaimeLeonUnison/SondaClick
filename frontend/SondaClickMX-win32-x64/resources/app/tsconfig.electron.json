{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",  // Usa CommonJS para Electron
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist-electron",
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["electron/**/*.ts"]
}