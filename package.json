{
  "name": "sondaclick",
  "version": "1.0.0",
  "description": "Aplicaci√≥n SondaClickMX",
  "main": "build_installer.js",
  "scripts": {
    "clean:backend": "cd backend && rimraf dist build",
    "clean:frontend": "cd frontend && rimraf dist SondaClickMX-win32-x64",
    "clean:installer": "rimraf windows_installer",
    "clean:all": "npm run clean:backend && npm run clean:frontend && npm run clean:installer",
    "build:backend": "cd backend && pyinstaller --onefile --name SondaClickBackend --noconsole app.py",
    "build:frontend:vite": "cd frontend && npm run build",
    "build:frontend:package": "cd frontend && npm run package",
    "build:frontend:msi": "node build_installer.js",
    "build:all": "npm run clean:all && npm run build:backend && npm run build:frontend:vite && npm run build:frontend:package && npm run build:frontend:msi"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "electron-wix-msi": "^5.1.3",
    "fs-extra": "^11.3.0",
    "rimraf": "^6.0.1"
  }
}
